<%= form_for(@article) do |f| %>
  <ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <div>
    <p>
      <%= f.label :text %><br />
      <%= f.text_area :text, cols: 110, rows: 10, class: 'wysihtml5' %>
    </p>
  </div>
  <p>
    <%= f.submit :class => "btn btn-info" %>
  </p>
<% end %>
